<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sony.proyecto.BookDescription">

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="149dp"
        android:layout_height="146dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/bookTitle"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="TÃ­tulo"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintLeft_toRightOf="@+id/bookImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="13dp" />

    <EditText
        android:id="@+id/bookAuthor"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Autor"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintLeft_toRightOf="@+id/bookImage"
        app:layout_constraintTop_toBottomOf="@+id/bookTitle"
        android:layout_marginStart="13dp" />

    <EditText
        android:id="@+id/bookEditorial"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:text="Editorial"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookAuthor"
        app:layout_constraintLeft_toRightOf="@+id/bookImage"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.384"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/bookDescription"
        android:layout_width="352dp"
        android:layout_height="113dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookImage"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />


    <ListView
        android:id="@+id/list"
        android:layout_width="358dp"
        android:layout_height="238dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/bookDescription"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
