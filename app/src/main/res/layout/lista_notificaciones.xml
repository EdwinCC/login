<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:weightSum="1"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">
    >


    <ImageView
        android:id="@+id/fotoLibro"
        android:layout_width="64dp"
        android:layout_height="98dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/asuitableboy" />

    <TextView
        android:id="@+id/nombreLib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/miLibro"
        android:layout_alignStart="@+id/miLibro"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/nombreUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/miLibro"
        android:layout_alignLeft="@+id/miLibro"
        android:layout_alignStart="@+id/miLibro"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginStart="7dp" />

    <TextView
        android:id="@+id/miLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreLib"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintLeft_toRightOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El Usuario"
        android:layout_marginLeft="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.103"
        android:layout_marginStart="103dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:text="solicita intercambiar"
        app:layout_constraintLeft_toRightOf="@+id/nombreUsu"
        app:layout_constraintTop_toTopOf="@+id/nombreUsu" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:text="por el Libro "
        app:layout_constraintBottom_toBottomOf="@+id/nombreLib"
        app:layout_constraintLeft_toRightOf="@+id/nombreLib" />

</android.support.constraint.ConstraintLayout>