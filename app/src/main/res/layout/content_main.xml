<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:pointerIcon="arrow"
    android:background="@color/colorverdelimon"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sony.proyecto.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tlogin"
        android:text="@string/Logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorVerdeOscuro"
        android:textSize="@android:dimen/notification_large_icon_width"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="111dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etcuenta"
        android:layout_width="285dp"
        android:layout_height="37dp"


        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/tlogin" />

    <EditText
        android:id="@+id/etpass"
        android:inputType="textPassword"
        android:layout_width="285dp"
        android:layout_height="41dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/etcuenta" />



    <Button
        android:id="@+id/btnlogin"
        android:layout_width="91dp"
        android:layout_height="37dp"
        android:background="@color/colorVerdeOscuro"
        android:gravity="left"
        android:text="@string/btningresar"
        android:textColor="@color/colorverdelimon"

        app:layout_constraintRight_toLeftOf="@+id/btnregistrarse"
        android:layout_marginRight="37dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/etpass" />

    <Button
        android:id="@+id/btnregistrarse"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:background="@color/colorVerdeOscuro"
        android:gravity="right"
        android:text="@string/btnregistrar"
        android:textColor="@color/colorverdelimon"
        android:layout_marginRight="41dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/etpass" />


</android.support.constraint.ConstraintLayout>
