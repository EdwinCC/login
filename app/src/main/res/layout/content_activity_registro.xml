<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sony.proyecto.Activity_registro"
    tools:showIn="@layout/activity_registro">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro"
        android:textColor="@color/colorVerdeOscuro"
        android:textSize="@android:dimen/notification_large_icon_height"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="62dp"
        android:layout_height="20dp"
        android:text="@string/ID"
        android:textColor="@color/colorVerdeOscuro"
        android:textSize="@dimen/activity_horizontal_margin"
        android:id="@+id/textView"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etregistrocuenta"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.343" />

    <EditText
        android:layout_width="173dp"
        android:layout_height="20dp"
        android:id="@+id/etregistrocuenta"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contraseÃ±a"
        android:textColor="@color/colorVerdeOscuro"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:id="@+id/textView3"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etregistropass"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="173dp"
        android:layout_height="20dp"
        android:id="@+id/etregistropass"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/etregistrocuenta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correo"
        android:textColor="@color/colorVerdeOscuro"
        android:textSize="@dimen/activity_horizontal_margin"


        android:id="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etregistrocorreo"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.298"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/tvregistrosexo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:layout_width="173dp"
        android:layout_height="20dp"
        android:id="@+id/etregistrocorreo"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/etregistropass" />

    <Button
        android:id="@+id/btnregistroregistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registrarse"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorverdelimon"
        android:background="@color/colorVerdeOscuro"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp" />

    <TextView
        android:id="@+id/tvregistrosexo"
        android:layout_width="47dp"
        android:layout_height="20dp"
        android:text="@string/sexo"
        android:textColor="@color/colorVerdeOscuro"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/tvregistropais"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cbsexomasc"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <CheckBox
        android:id="@+id/cbsexomasc"
        style="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:checked="false"
        android:text="@string/masculino"
        android:textColor="@color/colorVerdeOscuro"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/etregistrocorreo"
        app:layout_constraintRight_toLeftOf="@+id/cbsexofem"
        android:layout_marginRight="8dp" />
    <CheckBox
        android:id="@+id/cbsexofem"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/femenino"
        android:textColor="@color/colorVerdeOscuro"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/etregistrocorreo" />

    <TextView
        android:id="@+id/tvregistropais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registropais"
        android:textColor="@color/colorVerdeOscuro"
        android:textSize="@dimen/activity_horizontal_margin"
        app:layout_constraintRight_toLeftOf="@+id/etregistropais"
        android:layout_marginRight="95dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toTopOf="@+id/btnregistroregistrarse" />

    <EditText
        android:id="@+id/etregistropais"
        android:layout_width="173dp"
        android:layout_height="20dp"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/cbsexofem"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnregistroregistrarse"
        app:layout_constraintVertical_bias="0.195" />

</android.support.constraint.ConstraintLayout>
